<div class="bg-lightdark row">
	 <div class="col-md-5 mt-3 ">
		 {{#link-to "list.add" class = " ml-4  mr-4 btn btn-success"}}<h4>ADD</h4>
  
		  {{/link-to}}
 {{#link-to "list" class="btn btn-warning"}}<h4>Close</h4>{{/link-to}}
      
	   <hr>
		  {{outlet}}
	 </div>
	<hr>
<div class="col-md-7 mt-5">
 {{#each this.current.items as |item|}}
  <article class="listing">
    <div class="details">
     <div class="  detail description mt-4 mb-3 bg-dark text-danger">
       <div class="text-warning ml-4 mt-4 h3">Description:</div>
      
      <div class="h4 ml-4">  {{item.description}} </div> 
     <br>
    </div>
     <div class="detail">
     <LinkTo @route="list.edit">
  <button class = "btn btn-primary"  {{on "click" (fn this.addItemlist item.id)}}>EDIT</button>
</LinkTo>
      <button class="btn btn-danger" {{on "click" (fn this.remove item)}}>REMOVE</button>
    </div>
   
    </div>
  </article>
{{/each}}

</div>
</div>